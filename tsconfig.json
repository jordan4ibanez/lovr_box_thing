{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "Node",
    "types": [
      "lua-types/jit",
      "./lovr-api",
    ],
    "strict": true,
    "rootDir": "src/",
    "outDir": "out/",
  },
  "tstl": {
    "luaTarget": "JIT",
    "luaPlugins": [],
    "noImplicitGlobalVariables": true
  }
}